---
import Link from './Link.astro';
---

<Link class="invoke-logo" href="/">
  <span class="invoke-logo__icon">
    <svg width="66" height="66" viewBox="0 0 66 66" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path
        d="M43.9137 16H63.1211V3H3.12109V16H22.3285L43.9137 50H63.1211V63H3.12109V50H22.3285"
        stroke="white"
        stroke-width="5"></path>
    </svg>
  </span>
  <span class="invoke-logo__text">Invoke</span>
</Link>

<style>
  .invoke-logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .invoke-logo__icon {
    --size: 2rem;
    width: var(--size);
    height: var(--size);

    svg {
      width: 100%;
      height: 100%;
    }
  }
  .invoke-logo__text {
    font-family: var(--__sl-font-mono);
  }
</style>
